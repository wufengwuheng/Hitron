<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
	<style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    
	<style name="Theme.MyTheme" parent="Theme.Sherlock">
	    <item name="android:windowBackground">@drawable/bg</item>
	    <item name="android:homeAsUpIndicator">@drawable/back</item>
 		<item name="homeAsUpIndicator">@drawable/back</item>
    	<item name="actionBarStyle">@style/Widget.MyTheme.ActionBar</item>
    	<item name="android:actionBarStyle">@style/Widget.MyTheme.ActionBar</item>
    	<item name="android:actionBarItemBackground">@drawable/actionbar_item</item>
    	<item name="actionBarItemBackground">@drawable/actionbar_item</item>
	</style>

	<style name="Widget.MyTheme.ActionBar" parent="Widget.Sherlock.ActionBar">
    	<item name="android:background">@drawable/actionbar</item>
    	<item name="background">@drawable/actionbar</item>
    	<item name="android:textColor">#ffffff</item>
	</style>
	
